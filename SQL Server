	CREATE TABLE Autores
(
AutorID INT PRIMARY KEY IDENTITY (1,1),
Nome VARCHAR(100) NOT NULL,
Email VARCHAR(100) UNIQUE NOT NULL,
DataCadastro DATETIME DEFAULT GETDATE()

);


	CREATE TABLE Artigos
(
	ArtigoID INT PRIMARY KEY IDENTITY(1,1),
    AutorID INT NOT NULL,
    Titulo VARCHAR(200) NOT NULL,
    Conteudo VARCHAR(MAX) NOT NULL,
    DataPublicacao DATETIME DEFAULT GETDATE(),
    Relatorio VARCHAR(20) NOT NULL CHECK (Relatorio IN ('Rascunho','Publicado')),
    FOREIGN KEY (AutorID) REFERENCES Autores(AutorID)

);


	CREATE TABLE Comentarios 
(
ComentarioID INT PRIMARY KEY IDENTITY(1,1),
ArtigoID INT NOT NULL,
Nome VARCHAR(100) NOT NULL,
Email VARCHAR(100) NOT NULL,
Texto VARCHAR(MAX) NOT NULL,
DataComentario DATETIME DEFAULT GETDATE(),
FOREIGN KEY (ArtigoID) REFERENCES Artigos(ArtigoID)

);
